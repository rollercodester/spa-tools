    "prettier-config-spatools": "workspace:*",
    "typescript-config-spatools": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "~5.2.2",
    "vitest": "^1.0.4"
